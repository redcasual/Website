@page 
@model Website.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1>Welcome to the Bleakwind Buffet</h1>
    <p>We at Bleakwind Buffet are proud to bring you authentic fantasy meals straight from the world of Skyrim.
    Shake the blood off your sword and sake your thirst with one of our old-fashioned sailor sodas.
    Hack into a Smokehouse Skeleton with your dagger.
    Or vanquish the the mighty Thalmor Triple Burger!
    You’ve had a hard adventure and earned your loot, so spend it with us!.</p>
</div>
<form id="menu-search">
    <div id="search">
        <input type="text" name="SearchTerms" value="@Model.SearchTerms"/>
        <input type="submit" value="Search"/>
    </div>

    <div id="filters">
        <h4>Type of Item</h4>
        @foreach (String type in Menu.Types)
        {
            <label>
                <input type="checkbox" name="ItemType" value="@type"/>
                @type
            </label>
        }

        <h4>Calories</h4>
        <div>
            Between
            <input name="CaloriesMin" type="number" min="0" max="1000" step="1" placeholder="min" />
            and
            <input name="CaloriesMax" type="number" min="0" max="1000" step="1" placeholder="max" />
        </div>

        <h4>Price</h4>
        <div>
            Between
            <input name="PriceMin" type="number" min="0" max="8.00" step="0.01" placeholder="min" />
            and
            <input name="PriceMax" type="number" min="0.00" max="8.00" step="0.01" placeholder="max" />
        </div>
    </div>

    <div id="results">
        <h2>Entrees</h2>
        <ul>
            @foreach (IOrderItem item in Model.MenuItems)
            {
                @if(item.Type == "Entree")
                {
                    <li>
                        <div class="details">
                            <h3 class="order">@item.ToString()</h3>
                            <div class="type">@item.Type</div>
                            <div class="price">@item.Price</div>
                            <div class="calories">@item.Calories</div>
                            <div class="desc">@item.Description</div>
                        </div>
                    </li>
                }
                
            }
        </ul>
        <h2>Sides</h2>
        <ul>
            @foreach (IOrderItem item in Model.MenuItems)
            {
                @if (item.Type == "Side")
                {
                    <li>
                        <div class="details">
                            <h3 class="order">@item.ToString()</h3>
                            <div class="type">@item.Type</div>
                            <div class="price">@item.Price</div>
                            <div class="calories">@item.Calories</div>
                            <div class="desc">@item.Description</div>
                        </div>
                    </li>
                }

            }
        </ul>
        <h2>Drinks</h2>
        <ul>
            @foreach (IOrderItem item in Model.MenuItems)
            {
                @if (item.Type == "Drink")
                {
                    <li>
                        <div class="details">
                            <h3 class="order">@item.ToString()</h3>
                            <div class="type">@item.Type</div>
                            <div class="price">@item.Price</div>
                            <div class="calories">@item.Calories</div>
                            <div class="desc">@item.Description</div>
                        </div>
                    </li>
                }

            }
        </ul>
    </div>
</form>
